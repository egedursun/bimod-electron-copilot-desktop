{
  "name": "bimod-electron-copilot",
  "version": "1.0.0",
  "main": "electron.js",
  "build": {
    "asar": false,
    "appId": "com.bimod.copilot",
    "productName": "Bimod-Electron-Copilot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      ".venv/**/*"
    ],
    "icon": "src/assets/img/common/logo",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "src/assets/img/common/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/img/common/logo.ico"
    },
    "linux": {
      "target": [
        "appImage",
        "deb",
        "tar.gz"
      ],
      "icon": "src/assets/img/common/logo.png"
    }
  },
  "scripts": {
    "start": "electron electron.js",
    "build": "electron-builder",
    "dist": "electron-builder --mac --win --linux",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": {
    "name": "Ege Dogan Dursun",
    "email": "admin@bimod.io"
  },
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.1",
    "mic": "^2.1.2",
    "moment": "^2.30.1",
    "node-audiorecorder": "^3.0.0",
    "node-record-lpcm16": "^1.0.1",
    "node-schedule": "^2.1.1",
    "screenshot-desktop": "^1.15.0",
    "sox-static": "^1.0.0",
    "sox-static-linux": "^1.4.0",
    "sox-static-macos": "^1.3.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.0.2"
  }
}
